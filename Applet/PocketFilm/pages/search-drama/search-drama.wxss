page {
    color: #666;
    padding: 10rpx;
  }
  
  .search {
    width: 100%;
    height: 100%;
    display: flex;
  }
  
  .search .search_input {
    border: 1px solid #eee;
    border-radius: 12rpx;
    height: 100%;
    padding: 9rpx 30rpx;
    font-size: 30rpx;
    width: 69%;
    margin-right: 15rpx;
  }
  
  .search .search_button {
    width: 18%;
    font-size: 30rpx;
    height: 100%;
    margin-right: 15rpx;
  }
  
  .input_search_result_item {
    display: flex;
    width: 100%;
    height: 228rpx;
    margin-top: 12rpx;
  }
  
  .left {
    width: 33%;
    margin-right: 21rpx;
  }
  
  .left image {
    width: 100%;
    height: 100%;
    border-radius: 39rpx;
  }
  
  .right {
    width: 63%;
    font-size: 30rpx;
  }
  
  .right .name .actor {
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .right .actor {
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .right .name {
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
  }
  
  .search_no_result {
    text-align: center;
    margin-top: 54rpx;
    font-size: 28rpx;
  }
  
  .search_no_result_notice{
    color: #ef3338;
  }
  
  /* 视频列表 */
  .video_wrap{
    display: flex;
    flex-wrap: wrap;
    padding: 5rpx;
    justify-content: space-between;
  }
  
  .video_item{
    width: 24%;
    margin-bottom: 20rpx;
  }
  .video_img{
    position: relative;
  }
  .video_img image{
    width: 100%;
    height: 200rpx;
    border-radius: 15rpx;
  }
  .video_img .video_info{
    position: absolute;
    bottom: 10rpx;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    color: #fff;
    font-size: 24rpx;
  }
  
  .video_title{
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
  }
  